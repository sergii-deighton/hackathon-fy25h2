/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@angular/*": [
        "./node_modules/@angular/*"
      ],
      "@hackathon/shared": [
        "../../packages/shared/src/public-api.ts"
      ],
      "@hackathon/shared/*": [
        "../../packages/shared/src/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}